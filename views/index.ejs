<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top 10 Images Populaires</title>
    <style>
        /* Style général */
        body {
            font-family: Arial, sans-serif;
            background-color: #d2cdcd; /* Fond gris clair */
            margin: 0;
            padding: 20px;
            text-align: center;
        }

        /* Titre */
        h1 {
            font-size: 2em;
            font-weight: bold;
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        /* Conteneur des images */
        .image-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        /* Carte d'image */
        .image-card {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            width: 250px; /* Taille réduite */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

        .image-card:hover {
            transform: scale(1.05); /* Effet zoom au survol */
        }

        /* Image */
        .image-card img {
            width: 100%;
            height: 180px; /* Taille fixe */
            object-fit: cover; /* Coupe l'image pour l'adapter */
            border-bottom: 2px solid #ddd;
        }

        /* Texte sous l'image */
        .image-card p {
            font-size: 14px;
            color: #555;
            margin: 10px;
        }

        /* Lien de l'auteur */
        .image-card a {
            text-decoration: none;
            color: #007BFF;
            font-weight: bold;
        }

        .image-card a:hover {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Top 10 Images Populaires</h1>
    <div class="image-container">
        <% images.forEach(img => { %>
            <div class="image-card">
                <img src="<%= img.url %>" alt="<%= img.description %>">
                <p>Auteur: <a href="<%= img.profile %>" target="_blank"><%= img.author %></a></p>
            </div>
        <% }); %>
    </div>
</body>
</html>
