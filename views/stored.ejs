<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Images Flickr Stockées</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
        }
        .image-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .image-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .image-info {
            padding: 10px;
        }
        .navigation {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .navigation a {
            margin: 0 10px;
            padding: 8px 16px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h1>Images Flickr Stockées dans MongoDB</h1>
    
    <div class="navigation">
        <a href="/">Accueil</a>
        <a href="/stored">Images Stockées</a>
    </div>
    
    <div class="gallery">
        <% images.forEach(image => { %>
            <div class="image-card">
                <img src="<%= image.url %>" alt="<%= image.title %>">
                <div class="image-info">
                    <h3><%= image.title %></h3>
                    <p>Auteur: <%= image.author %></p>
                    <p>Ajouté le: <%= new Date(image.dateAdded).toLocaleDateString() %></p>
                    <a href="<%= image.link %>" target="_blank">Voir sur Flickr</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>